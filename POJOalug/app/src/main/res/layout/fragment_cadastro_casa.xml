<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/dados_casa2"
        android:layout_alignLeft="@+id/dados_casa2"
        android:layout_alignStart="@+id/dados_casa2"
        android:text="Descreva sua Casa:"
        android:textSize="@dimen/padrao"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/dados_casa2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView24"
        android:layout_alignLeft="@+id/textView26"
        android:layout_alignStart="@+id/textView26"
        android:ems="10"
        android:hint="@string/description_house"
        android:inputType="textMultiLine" />

    <Button
        android:id="@+id/btn_savecad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_weight="1"
        android:text="Salvar Dados" />

    <EditText
        android:id="@+id/edt_tel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/edt_end"
        android:layout_alignLeft="@+id/textView26"
        android:layout_alignStart="@+id/textView26"
        android:layout_marginBottom="20dp"
        android:layout_weight="1"
        android:ems="10"
        android:inputType="numberSigned" />

    <TextView
        android:id="@+id/textView26"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/edt_tel"
        android:layout_alignEnd="@+id/textView28"
        android:layout_alignRight="@+id/textView28"
        android:layout_weight="1"
        android:lineSpacingExtra="@dimen/dir"
        android:text="Telefone:"
        android:textSize="@dimen/dir"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edt_end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_savecad"
        android:layout_alignEnd="@+id/edt_tel"
        android:layout_alignRight="@+id/edt_tel"
        android:layout_marginBottom="16dp"
        android:layout_weight="1"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView28"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/edt_end"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="34dp"
        android:layout_weight="1"
        android:text="Endereço:"
        android:textSize="@dimen/dir"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView26"
        android:layout_toEndOf="@+id/textView28"
        android:layout_toRightOf="@+id/textView28"
        android:layout_weight="1"
        android:text="Informações Pessoais."
        android:textSize="@dimen/padrao"
        android:textStyle="bold|italic"
        tools:ignore="NotSibling" />

    <android.support.v7.widget.CardView
        android:id="@+id/view2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_above="@+id/textView21"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="28dp"
        android:shape="ring"
        android:background="#FFFFFF"
        app:cardCornerRadius="17dp">

        <ImageView
            android:id="@+id/img"
            android:layout_width="86dp"
            android:layout_height="88dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop"
            android:src="@drawable/iconecasinha">

        </ImageView>
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/textView21"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/radio"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:layout_weight="1"
        android:text="Quantidade de quartos:"
        android:textSize="@dimen/padrao"
        android:textStyle="bold" />

    <RadioGroup
        android:id="@+id/radio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView2"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/botao1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1" />

        <RadioButton
            android:id="@+id/botao2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2" />

        <RadioButton
            android:id="@+id/botao3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3" />

        <RadioButton
            android:id="@+id/botao4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="mais de 4" />
    </RadioGroup>


</RelativeLayout>

