<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="350dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <android.support.v7.widget.CardView
            android:id="@+id/view2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="55dp"
            android:background="#ffffff"
            android:shape="ring"
            app:cardCornerRadius="27dp">

            <ImageView
                android:id="@+id/imgCasaUser"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_above="@+id/endCasaUser"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="15dp"
                app:srcCompat="@drawable/imgcasapadrao" />

        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/endCasaUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/telefoneCasaUser"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="11dp"
            android:fontFamily="serif"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/telefoneCasaUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/infoCasaUser"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="18dp"
            android:fontFamily="serif"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/infoCasaUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/quartosUser"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="13dp"
            android:fontFamily="serif"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/quartosUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="12dp"
            android:fontFamily="serif"
            android:textSize="16sp"
            android:textStyle="bold" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>