<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/fundodois"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.osvaldoairon.pojoalug.LogEnter">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        app:srcCompat="@drawable/logomaioroftwo" />

    <EditText
        android:id="@+id/edt_email"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="#42426F"
        android:drawableLeft="@drawable/ic_action_email"
        android:ems="10"
        android:hint="@string/email_tela"
        android:inputType="textPersonName"
        android:textSize="16dp" />

    <EditText
        android:id="@+id/edt_pass"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/edt_email"
        android:layout_alignStart="@+id/edt_email"
        android:layout_below="@+id/edt_email"
        android:layout_marginTop="42dp"
        android:background="#42426F"
        android:drawableLeft="@drawable/ic_action_pass"
        android:ems="10"
        android:hint="@string/pass_tela"
        android:inputType="textPassword" />

    <android.support.v7.widget.CardView
        android:id="@+id/card"
        android:layout_width="300dp"

        android:layout_height="50dp"
        android:layout_above="@+id/acessar"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="27dp"
        android:elevation="10dp"
        app:cardBackgroundColor="#32CD32"
        app:cardCornerRadius="25dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Entrar"
                android:textColor="#fff"
                android:textSize="18sp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/acessar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:fontFamily="monospace"
        android:text="Cadastre-se aqui"
        android:textColor="@android:color/background_light"
        android:textSize="20sp" />
</RelativeLayout>
