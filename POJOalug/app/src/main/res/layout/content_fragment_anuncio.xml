<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:padding="16dp">

        <ImageView
            android:id="@+id/imgCasa"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_above="@+id/enderecoCasa"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="36dp" />

        <TextView
            android:id="@+id/enderecoCasa"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_above="@+id/infoCasa"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:fontFamily="casual"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/infoCasa"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_above="@+id/qntQuartos"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:fontFamily="casual"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/qntQuartos"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_above="@+id/telefoneCasa"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:fontFamily="casual"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/telefoneCasa"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:fontFamily="casual"
            android:textStyle="bold" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>