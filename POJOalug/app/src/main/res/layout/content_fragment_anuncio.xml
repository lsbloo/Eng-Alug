<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="340dp"
        android:padding="16dp">

        <android.support.v7.widget.CardView
            android:id="@+id/view2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="55dp"
            android:background="#ffffff"
            android:shape="ring"
            app:cardCornerRadius="27dp">

            <ImageView
                android:id="@+id/imgCasa"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignLeft="@+id/view2"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/view2"
                android:scaleType="centerCrop"
                android:src="@drawable/imgcasapadrao">


            </ImageView>
        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/enderecoCasa"
            android:layout_width="match_parent"
            android:layout_height="20dp"

            android:layout_above="@+id/infoCasa"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="12dp"
            android:fontFamily="serif"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/infoCasa"
            android:layout_width="match_parent"
            android:layout_height="20dp"

            android:layout_above="@+id/qntQuartos"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="17dp"
            android:fontFamily="serif"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/qntQuartos"
            android:layout_width="match_parent"
            android:layout_height="20dp"

            android:layout_above="@+id/telefoneCasa"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="13dp"
            android:fontFamily="serif"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/telefoneCasa"
            android:layout_width="368dp"
            android:layout_height="20dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:fontFamily="serif"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="322dp" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>